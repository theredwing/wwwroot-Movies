@model AdventureWorks.Models.SiteLayoutModel
<script src="~/js/HeaderLayout.js"></script>

<div id="hd">
    <div id="doc2" class="yui-t3 wrapper">
        <div class="hd-links-wrapper">
            <div class="hd-links">
                <ul>                    
                    <li style="visibility:@Model.AnonymousTemplateVisibility"><a href="@Url.Action("Login","Home")" class="hd-ico-login">Sign Up or Register</a></li>
                    <li style="visibility:@Model.LoggedInTemplateVisibility">@User.Identity.Name</li>                                
                    <li style="visibility:@Model.LoggedInTemplateVisibility"><a href="/Home/Logout" class="hd-ico-logout">Logout</a></li>
                    <li><a href="@Url.Action("OpenCart","ShoppingCart")" class="hd-ico-cart">Shopping Cart</a> <a id="LblCartItemsCount" href="@Url.Action("OpenCart","ShoppingCart")" class="hd-ico-cartItems">@Model.ShoppingCartItemsCount</a></li>
                </ul>
            </div>
        </div>
        <h2 class="banner">			
            <a href="@Url.Action("Default","Home")" id="LnkHome">
                <img src="@Url.Content("~/Images/awc_logo.png")" alt="ComponentOne" />
                </a>
        </h2>
    </div>
	<div id="mainMenuContainer">	
        <ul id="MainMenu"></ul>
		</div>
	<div id="subMenuContainer">	
        <ul id="SubMenu"></ul>
		</div>
</div>
